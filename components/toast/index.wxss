/**toast.wxss**/

.wetoast {
  display: none;
}

.wetoast_show {
  display: block;
}

.wetoast__mask {
  position: fixed;
  z-index: 2999;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  opacity: 0.75;
  background-color: #000;
}

.wetoast__bd {
  opacity: 0;
  display: flex;
  flex-direction: column;
  position: fixed;
  z-index: 3000;
  width: 240rpx;
  height: 240rpx;
  top: 50%;
  left: 50%;
  padding: 30rpx;
  box-sizing: border-box;
  margin-left: -120rpx;
  margin-top: -120rpx;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 10rpx;
  color: #fff;
  word-wrap: break-word;
  word-break: break-all;
  align-items: center;
  justify-content: space-around;
}

.wetoast__bd__img {
  margin-top: 3px;
}

.wetoast__bd__img_desc {
  width: 100rpx;
  height: 100rpx;
  vertical-align: middle;
}

.wetoast__bd__title {
  text-align: center;
  font-size: 26rpx;
  line-height: 34rpx;
}
