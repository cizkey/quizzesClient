/* components/dialog/index.wxss */

.dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0.75;
  background-color: #000;
  z-index: 1999;
}

.dialog-wrap {
  width: 506rpx;
  padding-bottom: 150rpx;
  position: fixed;
  z-index: 2000;
  left: 50%;
  top: 50%;
  margin-left: -253rpx;
  transform: translateY(-50%);
}

.dialog-body {
  width: 506rpx;
  border-radius: 16rpx;
  background-color: #fff;
  overflow: hidden;
}
.dialog-body .title{
  height:110rpx; 
  line-height: 110rpx;
  color: #fff;
  text-align: center;
}
.dialog-close{
  position: absolute;
  bottom: 0;
  width: 70rpx;
  height: 70rpx;
  left: 50%;
  margin-left: -35rpx;
}
.dialog-close image{
  width: 100%;
  height: 100%;
}