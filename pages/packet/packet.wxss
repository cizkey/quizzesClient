page {
  width: 100%;
  height: 100%;
  background: #fff;
}

.wrapper {
  width: 100%;
  height: 100%;
}

.wrapper .tip {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  background: rgba(255, 216, 0, 0.8);
  text-align: center;
  font-size: 28rpx;
  color: #666666;
}

.wrapper .section-wrapper {
  margin-top: 60rpx;
}

.wrapper .section {
  width: 550rpx;
  margin: 40rpx auto 0;
  background: #efefef;
  border-radius: 16rpx;
  overflow: hidden;
}

.wrapper .section input {
  width: 520rpx;
  height: 90rpx;
  margin-left: 30rpx;
  font-size: 30rpx;
}

.wrapper .section .input-placeholder {
  text-indent: 30rpx;
}

.wrapper .submit {
  width: 550rpx;
  height: 90rpx;
  background: #487BF0;
  border-radius: 16rpx;
  color: #fff;
  font-size: 34rpx;
  margin-top: 66rpx;
}

.wrapper .button-hover {
  background: #6a92ef;
}

.wrapper .tip-text {
  color: #487BF0;
  font-size: 28rpx;
  text-indent: 160rpx;
  margin-top: 10rpx;
}

@-webkit-keyframes bounce {
  0%, 60%, 75%, 90%, to {
    -webkit-animation-timing-function: cubic-bezier(0.215, 0.61, 0.355, 1);
    animation-timing-function: cubic-bezier(0.215, 0.61, 0.355, 1);
  }

  0% {
    opacity: 0;
    -webkit-transform: translate3d(-1000rpx, 0, 0);
    transform: translate3d(-1000rpx, 0, 0);
  }

  60% {
    opacity: 1;
    -webkit-transform: translate3d(25rpx, 0, 0);
    transform: translate3d(25rpx, 0, 0);
  }

  75% {
    -webkit-transform: translate3d(-10rpx, 0, 0);
    transform: translate3d(-10rpx, 0, 0);
  }

  90% {
    -webkit-transform: translate3d(5rpx, 0, 0);
    transform: translate3d(5rpx, 0, 0);
  }

  to {
    -webkit-transform: none;
    transform: none;
  }
}

@keyframes bounce {
  0%, 60%, 75%, 90%, to {
    -webkit-animation-timing-function: cubic-bezier(0.215, 0.61, 0.355, 1);
    animation-timing-function: cubic-bezier(0.215, 0.61, 0.355, 1);
