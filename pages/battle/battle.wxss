/* pages/battle/battle.wxss */
.battle-list{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 80rpx 40rpx 0;
  justify-content: space-between;
}
.battle-list .battle-item{
  margin-bottom: 30rpx;
  /* width: 320rpx;
  height: 200rpx; */
  font-size: 0;
  position: relative;
  border-radius: 16rpx;
  overflow: hidden; 
}
.battle-list .battle-item button{
  margin: 0;
  display: block;
  padding: 0;
  background: none;
  border:none;
  font-size: 0;
}
.battle-list .battle-item button::after{
  border: none;
}
.battle-list .battle-item .subject{
  position: absolute;
  font-size:38rpx;
  line-height: 60rpx;
  color: #fff;
  top: 50rpx;
  left: 40rpx;
  font-weight: 600;
}
.battle-list .battle-item .mask{
  position: absolute;
  font-size:30rpx;
  text-align: center;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.6);
  line-height: 200rpx;
  color: #fff;
  z-index: 100;
}
.battle-list .battle-item image{
  width: 320rpx;
  height: 200rpx;
}