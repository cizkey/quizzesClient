/* pages/history/index.wxss */

page {
  background: #fff;
}

.container {
}

.user-box {
  padding-top: 54rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-box .avatar {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
}

.user-box .username {
  margin-top: 10rpx;
  font-size: 30rpx;
  line-height: 48rpx;
  color: #3a3c3f;
}

.user-box .usermotto {
  font-size: 24rpx;
  line-height: 44rpx;
  color: #3a3c3f;
}

.subject-box {
  padding-top: 24rpx;
}

.subject-title {
  height: 36rpx;
  line-height: 36rpx;
  position: relative;
  margin: 0 40rpx;
  text-align: center;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.subject-title .line {
  position: absolute;
  width: 100%;
  height: 1rpx;
  background-color: #666;
  top: 16rpx;
  z-index: 2;
}

.subject-title .title {
  height: 36rpx;
  font-size: 30rpx;
  color: #3a3c3f;
  background: #fff;
  padding: 0 30rpx;
  z-index: 3;
  box-sizing: border-box;
}

.subject-list {
  padding-top: 7rpx;
}

.subject-item navigator {
  padding: 0 40rpx;
  margin-top: 60rpx;
  height: 38rpx;
  line-height: 38rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.subject-item .date {
  font-size: 30rpx;
  color: #666;
}

.subject-item .right {
  flex-direction: row;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #3a3c3f;
}

.subject-item .right .next {
  margin-left: 30rpx;
  width: 14rpx;
  height: 24rpx;
}
