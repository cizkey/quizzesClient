<view class="wrapper">
    <view class="tip bounce">请先完善个人信息，以便我们送资料给您</view>
    <form bindsubmit="formSubmit" bindreset="formReset">
        <view class="section-wrapper">
            <view class="section">
                <input name="phone" maxlength="11" type="number" placeholder="手机号" />
            </view>
            <view class="section">
                <input name="wechat"  type="text" placeholder="微信号" />
            </view>
            <view class="tip-text" wx:if="{{tipBok}}">
                <text>{{tips}}</text>
            </view>
        </view>
        <button class="submit" hover-class="button-hover" formType="submit">提交</button>
    </form>
</view>